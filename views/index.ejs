<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Tareas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="stylesheets/bootstrap/bootstrap.min.css">
    <script src="javascripts/jQuery/jquery-3.3.1.min.js"></script>
    <script src="javascripts/bootstrap/bootstrap.min.js"></script>
    <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>-->
  </head>
  <body>

      <div class="panel panel-default">

        <div class="panel-heading">
          <h3><i class="glyphicon glyphicon-list" aria-hidden="true"></i> Mis Tareas</h3>
        </div>

        <div class="panel-body">
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <div id="noty" style="display:none">

                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-9 col-md-offset-1">
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon3">Nueva Tarea</span>
                  <input type="text" class="form-control" id="new-work" aria-describedby="basic-addon3">
                </div>
              </div>
              <div class="col-md-2">
                <div class="input-group">
                  <button
                  id="save-work" class="btn btn-primary" class="form-control">
                  Agregar </button>
                </div>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <ul class="list-group">
                  <li class="list-group-item">No se encontraron tareas registradas.</li>
                </ul>
              </div>
            </div>
        </div>
      </div>

  </body>
</html>
<!-- Templates -->
<template id="empty-work">
  <li class="list-group-item">No se encontraron tareas registradas.</li>
</template>

<template id="item-work">
  <li class="list-group-item text-center">

    <b>${ work.name }</b>

    <input id="work-${ work.id }" type="checkbox" id-work="${ work.id }">

    <button id="edit-work" class="btn btn-success" id-work="${ work.id }"><i class="glyphicon glyphicon-edit"></i></button>

    <button id="delete-work" class="btn btn-danger" id-work="${ work.id }"><i class="glyphicon glyphicon-trash"></i></button>

  </li>
</template>
<!-- End Templates -->

<script type="text/javascript" src="javascripts/index.js"></script>
